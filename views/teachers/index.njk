{% extends "layout.njk" %}

{% block content %}
<main>
    <div class="card table-container">
        <table width=100%>
            <a href="/teachers/create">Novo</a>
            <thead>
                <tr>
                    <th>Professor</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td>
                        <span style="background-image: url({{ teacher.avatar_url }})"></span>
                        {{ teacher.name }}
                    </td>
                    <td>
                        {% for service in teacher.services %}
                        <span>{{ service }}</span>
                        {% endfor %}
                    </td>
                    <td><a href="/teachers/{{ teacher.id }}">Ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</main>
{% endblock content %}
